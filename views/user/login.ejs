<%- include('../partials/header.ejs')%>
  
    <main>
        <form action = '/users/login' method = 'POST' class="form-margin">
            <h1 class="mb-3 d-flex justify-content-center">Log In</h1>
            <div class="mb-3">

            <div class="mb-3">
                <label for="email" class="form-label fw-bold">Email</label>
                <input type="text" class="form-control" id="email" name="email" placeholder="add email" aria-describedby="email" required>
            </div>

            <div class="mb-3">
                <label for="password" class="form-label fw-bold">Password</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="add password" aria-describedby="password" required>
            </div>

            <div class="d-grid gap-2 col-12 mx-auto">
                <button class="btn btn-primary" type="submit" value="Log In">Log In</button>
            </div>
        </form>
    </main>

<%- include('../partials/footer.ejs') %>