<!-- Landing page for events -->

<%- include('../partials/header.ejs') %>

    <main>
        <% if(events.length) { %>
            <h1 class="fw-bold display-5 d-flex justify-content-center">Please Select</h1><br> 
            <% events.forEach(event=> { %>
                <!-- <h1 class="fw-bold display-5 d-flex justify-content-center">Music Talk</h1><br> -->

                <div class="container-fluid">
                    <div class="row">
                        <div class="col">
                            <!-- <a class="navbar-brand d-flex justify-content-center" href="/events/<%= event.id%>"><img src="<%= event.image %>" alt="musican-icon" width="400" class="img-fluid rounded"></a> -->

                            <a class="navbar-brand d-flex justify-content-center" href="/events/<%= event.id %>">
                                <p class="text-center">
                                    <%= event.category %> with <%= event.host %><br>
                                    <!-- From: <%= event.startDateTime %><br>  -->
                                    <!-- To: <%= event.endDateTime %><br> -->
                                </p>
                                <br><br>
                            </a>
                        </div>                     
                    </div>
                </div>
            <% }); %>
        <% } else { %>
            <div class="container-fluid">
                <div class="row">
                    <div class="col">
                        <br><br><br><br><br><br><br><br><br><br><br><br><br>
                        <h1 class="fw-bold display-5 d-flex justify-content-center">There are no events to display</h1>
                        <br><br><br><br><br><br><br><br><br><br><br><br><br>
                    </div>
                </div>
            </div>
        <% } %>
    </main>

<%- include('../partials/footer.ejs') %>